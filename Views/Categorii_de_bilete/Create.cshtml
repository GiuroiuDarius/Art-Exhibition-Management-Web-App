    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Denumire" class="control-label">Denumire</label>
                <select asp-for="Denumire" asp-items="ViewBag.DenumireList"></select>
                <span asp-validation-for="Denumire" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pret" class="control-label">Pret</label>
                <input asp-for="Pret" class="form-control" />
